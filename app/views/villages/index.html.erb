      <body>
  <div class="spinner"></div>
  <!--============================== header =================================-->

  <div class="bg-content">       
    <!--============================== content =================================-->      
        <div id="content"><div class="ic"></div>
      <div class="container">
            <div class="row">
          <article class="span12">
          <h3 class="text-center">Villages</h3>
          <hr>
           </article>
          <div class="clear"></div>
           <ul class="portfolio clearfix">           

        
            <% Village.latest.each do |village| %>
       
             <li class="box">
                  <h6 class="text-center"><%= village.name %></h6>
                   <hr> 
                  <a href="<%= village.website %>" class="magnifier" >
                  <img alt="<%= village.name %>" src="<%= village.remote_image_url %>"></a>
              </li> 
             <% end %>                                  
              </ul> 
        </div>
          </div>
    </div>
      </div>

